                                    </t>
                                </tbody>
                        </table>

    </template>

<template id="stock_batch_picking.report_batch_picking">

    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="doc">
            <t t-call="stock_move_selection_wzd.external_layout_LR">
                <div class="page">
                    <t t-set="is_pack" t-value="False"/>
                    <div t-if="doc.picking_type_id == 'internal'" class="row mt32 mb32">
                        <div class="col-xs-3">
                            <strong>Date:</strong>
                            <span t-esc="now()" t-options="{'widget': 'datetime'}"/>
                        </div>
                        <div class="col-xs-3">
                            <strong>Printed by:</strong>
                            <span t-field="user.name"/>
                        </div>
                    </div>
                    <t t-if="doc.notes">
                        <p t-esc="doc.notes"/>
                    </t>
                    <t t-call="stock_move_selection_wzd.batch_header"/>
                    <t t-call="stock_move_selection_wzd.table_header_LR"/>
                    <t t-foreach="grouped_data" t-as="sale">
                       <t t-call="stock_move_selection_wzd.table_body_line_LR"/>
                    </t>
                    <t t-call="stock_move_selection_wzd.table_footer_LR"/>
                </div>
            </t>

            <t t-call="stock_move_selection_wzd.external_layout_LR">
                <div class="page">
                    <t t-set="is_pack" t-value="True"/>
                    <t t-call="stock_move_selection_wzd.batch_header"/>
                    <t t-call="stock_move_selection_wzd.table_header_LR"/>
                    <t t-foreach="pack_line" t-as="doc_package">
                       <t t-call="stock_move_selection_wzd.table_body_pack_line_LR"/>
                    </t>
                    <t t-call="stock_move_selection_wzd.table_footer_LR"/>
                </div>
            </t>

        </t>
    </t>
</template>
</odoo>
