<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <report string="Batch picking"
            id="stock_batch_picking.action_report_batch_picking"
            model="stock.batch.picking"
            report_type="qweb-html"
            name="stock_batch_picking.report_batch_picking"
            file="stock_batch_picking.report_batch_picking"/>
        <template id="batch_header">
            <t t-set="pack" t-value="is_pack"/>
            <style>
                .td_01 {
                    padding: 4px;
                    text-align: center;
                    border: 0px
                 }
            </style>
            <t t-set="batch" t-value="doc"/>
            <table width = "50%">
                <tbody>
                    <tr>
                        <td id="th_ref" class="td_01" t-if="doc.picking_type_id.group_code=='outgoing'">
                            CÓDIGO CLIENTE
                        </td >

                        <td id="th_date" class="td_01">
                            FECHA
                        </td>

                        <td id="th_pick" class="td_01">
                            ALBARÁN
                        </td>

                        <td id="th_vat" class="td_01" t-if="doc.picking_type_id.group_code=='outgoing'">
                            NIF ó DNI
                        </td>
                        <td id="vat" class="td_01">
                            RUTA
                        </td>
                    </tr>
                     <tr>
                        <td class="td_01" t-if="doc.picking_type_id.group_code=='outgoing'">
                             <span t-field="batch.partner_id.ref"/>
                        </td>

                        <td class="td_01">
                            <t t-if="batch.state=='done'" t-esc="batch.date_done.split()[0]"/>
                            <t t-if="batch.state!='done'" t-esc="batch.date.split()[0]"/>
                        </td>

                        <td class="td_01">

                            <span t-if="batch == False"  t-field="batch.name"/>
                            <span t-if="batch == True and pack_lines_picking_id != False"  t-field="pack_lines_picking_id.name"/>
                        </td>

                        <td class="td_01" t-if="doc.picking_type_id.group_code=='outgoing'">
                           <span t-field="batch.partner_id.vat"/>
                        </td>
                         <td class="td_01">
                           <span t-field="batch.info_route_str"/>
                        </td>
                    </tr>
                </tbody>

            </table>
        </template>
        <template id="external_layout_LR">
            <link rel="stylesheet" href="/stock_move_selection_wzd/static/src/css/lr.css"></link>
            <t t-if="not o and doc">
                <t t-set="o" t-value="doc"/>
                <t t-set="partner" t-value="o.partner_id.sudo()"/>
            </t>
            <t t-set="partner" t-value="doc.partner_id.sudo()"/>

            <t t-if="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id.sudo()"/>

            </t>
            <t t-if="not o or not 'company_id' in o">
                <t t-set="company" t-value="res_company"/>
            </t>

            <div class="header o_boxed_header">
                <div class="row mb8">
                    <div class="col-xs-6 text-left mb4">
                        <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % to_text(company.logo)"/>

                        <h4 class="mt0" t-field="company.report_header"/>
                        <div name="company_address" class="mb4">
                            <span class="company_address" t-field="company.partner_id"
                                t-field-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}'/>
                        </div>
                    </div>
                    <div class="col-xs-6 text-right mb4">
                        <!--img t-if="doc.partner_id.logo" t-att-src="'data:image/png;base64,%s' % to_text(doc.partner_id.logo)"/-->

                        <!--h4 class="mt0" t-field="partner.report_header"/-->
                        <div name="partner_address" class="mb4">
                            <span class="company_address" t-field="doc.partner_id"
                                t-field-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}'/>
                        </div>
                    </div>
                </div>
            </div>

            <div class="article o_report_layout_boxed">
              <t t-raw="0" />
            </div>

            <div class="footer o_boxed_footer">
                <div class="text-center">
                    <ul class="list-inline">
                        <li t-if="company.phone">Tel: <span t-field="company.phone"/></li>
                        <li t-if="company.email">Mail: <span t-field="company.email"/></li>
                        <li t-if="company.website">Web: <span t-field="company.website"/></li>
                        <li t-if="company.vat"><t t-esc="company.country_id.vat_label or 'TIN'"/>: <span t-field="company.vat"/></li>
                    </ul>
                    <div t-field="company.report_footer"/>
                    <div>
                        Page: <span class="page"/> / <span class="topage"/>
                    </div>
                </div>
            </div>
        </template>
