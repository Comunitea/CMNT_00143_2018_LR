<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_create_batch_picking" model="ir.ui.view">
        <field name="name">batch_picking_wzd_form</field>
        <field name="model">stock.batch.picking.wzd</field>
        <field name="arch" type="xml">
            <form string="Batch Picking properties">
                <separator string="Batch Picking"/>
                <label string="Assign picking operations to an employee."/>
                <br/>
                <br/>
                <group>
                    <field name="batch_id"/>
                    <field name="picking_type_id" required="1"/>
                </group>
                <group>
                    <field name="date"/>
                    <field name="picker_id"/>
                </group>
                <label for="notes"/>
                <field name="notes"/>
                <notebook>
                    <page string="Pickings to add">
                        <field name="new_picking_ids" >
                            <tree>
                                <field name="state"/>
                                <field name="name"/>
                                <field name="picking_type_id"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Pickings in batch">
                        <field name="batch_picking_ids">
                            <tree>
                                <field name="state"/>
                                <field name="name"/>
                                <field name="picking_type_id"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
                <footer>
                    <button name="action_create_batch" string="_Create" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <act_window name="Create Batch Pickings"
                res_model="stock.batch.picking.wzd"
                src_model="stock.move"
                view_mode="form"
                target="new"
                key2="client_action_multi"
                id="batch_picking_wzd_act_window"/>

</odoo>
