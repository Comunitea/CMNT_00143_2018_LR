<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_create_batch_picking" model="ir.ui.view">
        <field name="name">batch_picking_wzd_form</field>
        <field name="model">stock.batch.picking.wzd</field>
        <field name="arch" type="xml">
            <form string="Grupos">
                <separator string="Grupos de albaranes"/>
                <label string="Gestión de movimientos y albaranes en grupos. "/>
                <br/>
                <br/>
                <group>
                    <field name="batch_picking_id" domain="[('picking_type_id', '=', picking_type_id)]"/>
                    <field name="picking_type_id" required="1"/>
                    <field name="sga_integrated"/>
                    <field name="date"/>
                    <field name="picker_id"/>
                </group>
                <group>
                    <!--field name="shipping_type"/>
                    <field name="delivery_route_path_id"/>
                    <field name="carrier_id"/-->
                </group>
                <label for="notes"/>
                <field name="notes"/>
                <notebook>
                    <page string="Albaranes para añadir">
                        <field name="new_picking_ids" >
                            <tree>
                                <field name="state"/>
                                <field name="name"/>
                                <field name="picking_type_id"/>

                            </tree>
                        </field>
                    </page>
                    <page string="Albaranes en la agrupación">
                        <field name="batch_picking_ids">
                            <tree>
                                <field name="state"/>
                                <field name="name"/>
                                <field name="picking_type_id"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Movimientos SGA" attrs="{'invisible': [('sga_integrated','=', False)]}">
                        <field name="moves_to_sga">
                            <tree
                                decoration-success="sga_state=='PE'"
                                decoration-primary="sga_state=='NE'"
                                decoration-danger="sga_state not in ('PE', 'NE', 'SR')">

                                <field name="origin"/>
                                <field name="product_id"/>
                                <field name="product_uom_qty"/>
                                <field name="state" invisible="1"/>
                                <field name="sga_state" invisible="1"/>
                                <button
                                        name="action_set_envio_sga"
                                        string="Marcar para alternar envio a SGA"
                                        type="object"
                                        icon="fa-rss"
                                        attrs="{'context': 'PE'}"
                                        />

                            </tree>
                        </field>
                    </page>

                    <page string="Movimientos" >
                        <field name="move_ids" readonly="1">
                            <tree>
                                <field name="origin"/>
                                <field name="product_id"/>
                                <field name="product_uom_qty"/>
                                <field name="state"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
                <footer>
                    <button name="action_create_batch" string="Crear grupo" type="object" class="oe_highlight" attrs="{'invisible': [('new_picking_ids', '=', []), ('batch_picking_id','!=', False)]}"/>
                    <button name="action_assign_batch" string="Asignar grupo" type="object" class="oe_highlight" attrs="{'invisible': [('new_picking_ids', '=', []), ('batch_picking_id','=', False)]}"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>


    <act_window name="Gestión de grupos"
                res_model="stock.batch.picking.wzd"
                src_model="stock.move"
                view_mode="form"
                target="new"
                key2="client_action_multi"
                id="batch_picking_wzd_act_window"/>

    <record id="open_view_create_batch_picking" model="ir.actions.act_window">
        <field name="name">Gestión de grupos</field>
        <field name="res_model">stock.batch.picking.wzd</field>
        <field name="view_type">form</field>
        <field name="domain">[]</field>
        <field name="target">new</field>
        <field name="view_mode">form</field>
    </record>
    <record id="action_assign_batch_picking_from_moves" model="ir.actions.server">
        <field name="name">Gestión de grupos</field>
        <field name="model_id" ref="stock.model_stock_move"/>
        <field name="binding_model_id" ref="stock.model_stock_move"/>
        <field name="state">code</field>
        <field name="code">records.action_add_to_batch_picking()</field>
    </record>
    <delete id="action_assign_batch_picking_from_moves" model="ir.actions.server"/>
    <record id="action_assign_batch_picking_from_picks" model="ir.actions.server">
        <field name="name">Gestión de grupos</field>
        <field name="model_id" ref="stock.model_stock_picking"/>
        <field name="binding_model_id" ref="stock.model_stock_picking"/>
        <field name="state">code</field>
        <field name="code">records.action_add_to_batch_picking()</field>
    </record>
    <delete id="action_assign_batch_picking_from_picks" model="ir.actions.server"/>
</odoo>
