<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_product_adaia_integration_form" model="ir.ui.view">
        <field name="name">product.product.adaia.integration.form</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="IntegraciÃ³n Adaia">
                    <group>
                        <field name="sga_state" widget="statusbar" statusbar_visible="NE,PS,SD" statusbar_colors='{"EE":"red", "EI":"red", "PS":"blue", "RS":"green"}'/>

                        <button name="create_new_adaia_file_button" context="{'file_type': 'adaia_product_code', 'mod_type': 'AG', 'version': 0}" 
                        string="Adaia New file" type="object" class="oe_stat_button"
                         icon="fa-shopping-cart" attrs="{'invisible': [('sga_state','in',('NI', 'SC', 'RS'))]}"/>
                        <button name="create_new_adaia_file_button" context="{'file_type': 'adaia_product_code', 'mod_type': 'MO', 'version': 0}"
                         string="Adaia Modification file" type="object" class="oe_stat_button"
                         icon="fa-shopping-cart" attrs="{'invisible': [('sga_state','in',('NI', 'SC', 'RS', 'EE', 'EI'))]}"/>
                        <button name="create_new_adaia_file_button" context="{'file_type': 'adaia_product_code', 'mod_type': 'DE', 'version': 0}"
                        string="Adaia remove file" type="object" class="oe_stat_button"
                         icon="fa-shopping-cart" attrs="{'invisible': [('sga_state','in',('NI', 'SC', 'RS', 'EE', 'EI'))]}"/>
                    </group>
                    <group>
                        <h4>Barcode</h4>
                        <button name="create_new_adaia_file_button" context="{'file_type': 'adaia_barcode_code', 'mod_type': 'AG', 'version': 1}" string="Adaia New barcode file" type="object" class="oe_stat_button"
                         icon="fa-shopping-cart"/>
                        <button name="create_new_adaia_file_button" context="{'file_type': 'adaia_barcode_code', 'mod_type': 'MO', 'version': 1}" string="Adaia Modification barcode file" type="object" class="oe_stat_button"
                         icon="fa-shopping-cart"/>
                        <button name="create_new_adaia_file_button" context="{'file_type': 'adaia_barcode_code', 'mod_type': 'DE', 'version': 1}" string="Adaia remove barcode file" type="object" class="oe_stat_button"
                         icon="fa-shopping-cart"/>
                    </group>
                    <group>
                        <h4>Stock</h4>
                        <button name="create_new_adaia_file_button" context="{'file_type': 'adaia_stock_code', 'mod_type': 'AG', 'version': 2}" string="Adaia New stock file" type="object" class="oe_stat_button"
                         icon="fa-shopping-cart"/>
                        <button name="create_new_adaia_file_button" context="{'file_type': 'adaia_stock_code', 'mod_type': 'MO', 'version': 2}" string="Adaia Modification stock file" type="object" class="oe_stat_button"
                         icon="fa-shopping-cart"/>
                        <button name="create_new_adaia_file_button" context="{'file_type': 'adaia_stock_code', 'mod_type': 'DE', 'version': 2}" string="Adaia remove stock file" type="object" class="oe_stat_button"
                         icon="fa-shopping-cart"/>
                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>