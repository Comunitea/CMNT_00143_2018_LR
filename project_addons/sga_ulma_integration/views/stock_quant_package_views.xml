<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- stock.quant.package kanban ulma status view -->
    <record model="ir.ui.view" id="view_quant_package_kanban_ulma">
        <field name="name">view.quant.package.kanban.ulma</field>
        <field name="model">stock.quant.package</field>
        <field name="inherit_id" ref="stock.view_quant_package_kanban"/>
        <field name="arch" type="xml">
            <xpath expr="//strong" position="replace">
                <strong class="o_kanban_record_title">(<field name="sga_state"/>) <field name="name"/></strong>
            </xpath>
        </field>
    </record>

    <!-- stock.quant.package ulma status search view -->
    <record id="quant_package_search_view_ulma" model="ir.ui.view">
        <field name="name">quant.package.search.view.ulma</field>
        <field name="model">stock.quant.package</field>
        <field name="inherit_id" ref="stock.quant_package_search_view"/>
        <field name="arch" type="xml">
            <field name="packaging_id" position="after">
                <field name="sga_state"/>
            </field>
            <xpath expr="//group" position="inside">
                <filter name="waiting" string="Waiting" domain="[('sga_state','=', 'pending')]"/>
                <filter name="error" string="Error" domain="[('sga_state','=', ('import_error', 'export_error'))]"/>
                <filter name="processed" string="Processed" domain="[('sga_state','=', 'done')]"/>
            </xpath>
        </field>
    </record>

    <!-- stock.quant.package ulma status form view -->
    <record id="view_quant_package_form_ulma" model="ir.ui.view">
        <field name="name">view.quant.package.form.ulma</field>
        <field name="model">stock.quant.package</field>
        <field name="inherit_id" ref="stock.view_quant_package_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="send_to_sga" string="Mover a ULMA" type="object"/>
                <button name="get_from_ulma" string="Recibir de ULMA" type="object"/>
                <field name="sga_state" widget="statusbar" statusbar_visible="pending,no_send, done"
                    statusbar_colors='{"export_error":"red", "import_error":"red","pending":"blue", "done":"green"}'/>
            </xpath>
        </field>
    </record>
</odoo>