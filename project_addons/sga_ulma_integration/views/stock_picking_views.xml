<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_picking_form_ulma" model="ir.ui.view">
        <field name="name">view.picking.form.ulma</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="IntegraciÃ³n ULMA">
                    <group>
                        <field name="ulma_state" widget="statusbar" statusbar_visible="W,P,E"
                            statusbar_colors='{"E":"red", "W":"blue", "P":"green"}'/>
                        <button name="send_to_ulma" string="Mover a ULMA" type="object"
                            class="oe_stat_button" icon="fa-shopping-cart"/>
                        <button name="get_from_ulma" string="Recibir de ULMA" type="object"
                            class="oe_stat_button" icon="fa-shopping-cart"/>
                        <button name="create_packages_for_ulma" string="Create packages" type="object"
                            class="oe_stat_button" icon="fa-shopping-cart"/>
                    </group>
                </page>
            </notebook>
        </field>
    </record>

    <!-- stock.picking tree ulma status view -->
    <record model="ir.ui.view" id="stock_vpicktree_ulma">
        <field name="name">stock.vpicktree.ulma</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.vpicktree"/>
        <field name="arch" type="xml">
            <field name="state" position="after">
                <field name="ulma_state"/>
            </field>
        </field>
    </record>

    <!-- stock.picking ulma status search view -->
    <record id="view_picking_internal_search_ulma" model="ir.ui.view">
        <field name="name">view.picking.internal.search.ulma</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_internal_search"/>
        <field name="arch" type="xml">
            <field name="group_id" position="after">
                <field name="ulma_state"/>
            </field>
            <filter name="picking_type" position="after">
                <filter name="waiting" string="Waiting" domain="[('ulma_state','=', 'W')]"/>
                <filter name="error" string="Error" domain="[('ulma_state','=', 'E')]"/>
                <filter name="processed" string="Processed" domain="[('ulma_state','=', 'P')]"/>
            </filter>
        </field>
    </record>
</odoo>