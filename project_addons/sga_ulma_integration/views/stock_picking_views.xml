<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="stock_picking_type_sga__ulma_form" model="ir.ui.view">
        <field name="name">stock.picking.type.sga.ulma.form</field>
        <field name="inherit_id" ref="stock_move_selection_wzd.view_picking_type_kanaban_form"/>
        <field name="model">stock.picking.type</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='sga_integrated']" position="after" >
                <field name="ulma_integrated" attrs="{'invisible': [('sga_integrated', '=', False)]}"/>
                <field name="ulma_type" attrs="{'invisible': [('ulma_integrated', '=', False)]}"/>

            </xpath>
        </field>
    </record>
    <record id="view_picking_form_ulma" model="ir.ui.view">
        <field name="name">view.picking.form.ulma</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock_move_selection_wzd.view_picking_form_sga"/>
        <field name="arch" type="xml">
            <field name="sga_integrated" position="after">
                <field name="ulma_integrated" attrs="{'invisible': [('ulma_integrated', '=', False)]}"/>
            </field>
            <xpath expr="//field[@name='sga_state']" position="before" >
                        <button name="send_to_sga" string="Mover a ULMA" type="object"
                            class="oe_stat_button" icon="fa-shopping-cart" attrs="{'invisible': [('ulma_integrated', '=', False)]}"/>
                        <button name="get_from_ulma" string="Recibir de ULMA" type="object"
                            class="oe_stat_button" icon="fa-shopping-cart" attrs="{'invisible': [('ulma_integrated', '=', False)]}"/>
                        <button name="create_packages_for_ulma" string="Create packages" type="object"
                            class="oe_stat_button" icon="fa-shopping-cart" attrs="{'invisible': [('ulma_integrated', '=', False)]}"/>

            </xpath>
            <xpath expr="//group[@name='sga_lines']" position="inside" >
                    <field name="ulma_ids" attrs="{'invisible': [('ulma_integrated', '=', False)]}">
                        <tree>
                            <field name="mmmcmdref" readonly="1"/>
                            <field name="momcre" readonly="1"/>
                            <field name="mmmentdes" readonly="1"/>
                            <field name="mmmartdes" readonly="1"/>
                            <field name="mmmcanuni" readonly="1"/>
                            <field name="mmmexpordref" readonly="1"/>
                        </tree>
                    </field>
            </xpath>
        </field>
    </record>


</odoo>