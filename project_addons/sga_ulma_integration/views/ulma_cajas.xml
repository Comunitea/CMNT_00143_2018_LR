<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record model="ir.ui.view" id="ulma_cajas_form">
        <field name="name">ulma.cajas.form</field>
        <field name="model">ulma.cajas</field>
        <field name="arch" type="xml">
            <form string="Ulma cajas">
                <sheet>
                    <group>
                        <group>
                            <field name="id"/>
                            <field name="matricula"/>
                            <field name="referencia"/>
                            <field name="hueco"/>
                            <field name="cantidad"/>
                            <field name="tipo"/>
                        </group>
                        <group>
                            <field name="caja_id"/>
                            <field name="procesado"/>
                            <field name="confirmado"/>
                            <field name="origen"/>
                            <field name="fecha"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="ulma_cajas_search">
        <field name="name">ulma.cajas.search</field>
        <field name="model">ulma.cajas</field>
        <field name="arch" type="xml">
                <search string="Ulma cajas">
                    <field name="matricula"/>
                    <field name="referencia"/>
                    <field name="tipo"/>
                    <field name="procesado"/>
                    <field name="fecha"/>
                </search>
            </field>
    </record>

    <record model="ir.ui.view" id="ulma_cajas_tree">
        <field name="name">ulma.cajas.tree</field>
        <field name="model">ulma.cajas</field>
        <field name="arch" type="xml">
            <tree string="Ulma cajas">
                <field name="id" />
                <field name="matricula"/>
                <field name="referencia"/>
                <field name="tipo"/>
                <field name="procesado"/>
                <field name="fecha"/>
            </tree>
        </field>
    </record>

    <record id="action_ulma_cajas_view" model="ir.actions.act_window">
        <field name="name">Ulma cajas</field>
        <field name="res_model">ulma.cajas</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('sga_ulma_integration.ulma_cajas_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('sga_ulma_integration.ulma_cajas_form')})]"/>
        <field name="search_view_id" ref="ulma_cajas_search"/>
    </record>

    <menuitem id="menu_sga_ulma_views_cajas" name="Ulma cajas" parent="menu_sga_ulma" action="sga_ulma_integration.action_ulma_cajas_view"  groups="stock.group_stock_manager"/>

</odoo>