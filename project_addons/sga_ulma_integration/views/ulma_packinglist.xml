<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record model="ir.ui.view" id="ulma_packinglist_form">
        <field name="name">ulma.packinglist.form</field>
        <field name="model">ulma.packinglist</field>
        <field name="arch" type="xml">
            <form string="Ulma packinglist">
                <sheet>
                    <group>
                        <group>
                            <field name="id"/>
                            <field name="mmmexpordref"/>
                            <field name="estado"/>
                            <field name="mmmsesid"/>
                        </group>
                        <group>
                            <field name="mmmbatch"/>
                            <field name="status"/>
                            <field name="mmmres"/>
                            <field name="mmmcmdref"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="ulma_packinglist_search">
        <field name="name">ulma.packinglist.search</field>
        <field name="model">ulma.packinglist</field>
        <field name="arch" type="xml">
                <search string="Ulma packinglist">
                    <field name="estado"/>
                    <field name="status"/>
                    <field name="mmmexpordref"/>
                    <field name="mmmbatch"/>
                    <field name="mmmres"/>
                </search>
            </field>
    </record>

    <record model="ir.ui.view" id="ulma_packinglist_tree">
        <field name="name">ulma.packinglist.tree</field>
        <field name="model">ulma.packinglist</field>
        <field name="arch" type="xml">
            <tree string="Ulma packinglist">
                <field name="id"/>
                <field name="mmmexpordref"/>
                <field name="estado"/>
                <field name="mmmsesid"/>
                <field name="mmmbatch"/>
                <field name="status"/>
                <field name="mmmres"/>
                <field name="mmmcmdref"/>
            </tree>
        </field>
    </record>

    <record id="action_ulma_packinglist_view" model="ir.actions.act_window">
        <field name="name">Ulma packinglist</field>
        <field name="res_model">ulma.packinglist</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('sga_ulma_integration.ulma_packinglist_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('sga_ulma_integration.ulma_packinglist_form')})]"/>
        <field name="search_view_id" ref="ulma_packinglist_search"/>
    </record>

    <menuitem id="menu_sga_ulma_views_packing" name="Ulma Packinglist" parent="menu_sga_ulma" action="sga_ulma_integration.action_ulma_packinglist_view"  groups="stock.group_stock_manager"/>

</odoo>