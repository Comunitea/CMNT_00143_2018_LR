<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_ulma_form" model="ir.ui.view">
        <field name="name">res.config.settings.ulma.form</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
        <field name="model">res.config.settings</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='group_stock_adv_location']/../../.." position="inside">
                <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="delay_check_availability"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="delay_check_availability"/>
                        <div class="text-muted">
                            If checked, check avalability for products afterdone moves are done in queu job, else, JIT.
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>