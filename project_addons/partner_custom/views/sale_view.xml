<odoo>
    <record id="sale_order_view_form_las_rias" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='sale_pay']" position="after">
                <group string="Las rias">
                    <group>
                        <field name="associate"/>
                    </group>
                    <group attrs="{'invisible': [('associate', '=', False)]}">
                        <field name="financiable_payment"/>
                        <field name="urgent"/>
                        <field name="direct"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>