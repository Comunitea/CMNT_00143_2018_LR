<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_invoice_document" inherit_id="account.report_invoice_document">
        <xpath expr="//div[@name='invoice_address']/.." position="after">
            <span t-field="o.expiration_dates_str"/>
        </xpath>
        <xpath expr="//p[@t-field='o.date_due']/../.." position="replace"></xpath>
        <xpath expr="//span[@t-field='o.number']/.." position="replace"></xpath>

        <xpath expr="//div[@name='invoice_address']" position="attributes">
            <attribute name="class">col-xs-4 col-xs-offset-1</attribute>
            <attribute name="style">border: 1px solid black; border-radius: 25px;</attribute>
        </xpath>

        <xpath expr="//table[@name='invoice_line_table']/tbody//td[6]/span" position="replace">
            <span t-esc="', '.join(map(lambda x: x.name, l.invoice_line_tax_ids))"/>
        </xpath>

        <xpath expr="//div[@name='invoice_address']" position="before">
            <div class="col-xs-7" style="border: 1px solid black; border-radius: 25px;">
                <div class="row">
                    <div class="col-xs-7">
                        <span t-field="o.journal_id.name"/>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-3" t-if="o.number">
                        <strong>Invoice:</strong>
                        <p t-field="o.number"/>
                    </div>
                    <div class="col-xs-3" t-if="o.name">
                        <strong>Description:</strong>
                        <p t-field="o.name"/>
                    </div>
                    <div class="col-xs-3" t-if="o.date_invoice">
                        <strong>Invoice Date:</strong>
                        <p t-field="o.date_invoice"/>
                    </div>
                    <div class="col-xs-3" t-if="o.origin">
                        <strong>Source:</strong>
                        <p t-field="o.origin"/>
                    </div>
                    <div class="col-xs-3" t-if="o.partner_id.ref">
                        <strong>Customer Code:</strong>
                        <p t-field="o.partner_id.ref"/>
                    </div>
                    <div name="reference" class="col-xs-3" t-if="o.reference">
                        <strong>Reference:</strong>
                        <p t-field="o.reference"/>
                    </div>
                </div>
            </div>
        </xpath>
        <xpath expr="//div[@class='page']" position="after">
            <t t-foreach="o.image_ids" t-as="image">
                <div class="page" style="page-break-before: always">
                    <img t-att-src="'data:image/png;base64,%s' % to_text(image.image_main)"/>
                </div>
            </t>
        </xpath>

    </template>

</odoo>
