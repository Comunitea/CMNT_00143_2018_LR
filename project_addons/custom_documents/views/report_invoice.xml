<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="custom_invoice_layout">
        <div class="article o_report_layout_standard">
            <t t-raw="0" />
        </div>
    </template>

    <template id="report_invoice_document" inherit_id="sale.report_invoice_document_inherit_sale">
        <xpath expr="//t[@t-call='web.external_layout']" position="attributes">
            <attribute name="t-call">custom_documents.custom_invoice_layout</attribute>
        </xpath>
        <xpath expr="//p[@t-if='o.payment_term_id']" position="after">
            <t t-set="expiration_dates" t-value="o.get_expiration_dates_tuples()"/>
            <t t-if="expiration_dates">
                <center><h3>Expiration dates</h3></center>
                <table class="table">
                    <t t-foreach="expiration_dates" t-as="expiration_line">
                        <tr>
                            <td> <span t-esc="expiration_line[0]"/> </td>
                            <td> <span t-esc="expiration_line[1]"/> </td>
                        </tr>
                    </t>
                </table>
            </t>
        </xpath>
        <xpath expr="//p[@t-field='o.date_due']/../.." position="replace"></xpath>
        <xpath expr="//span[@t-field='o.number']/.." position="replace"></xpath>

        <xpath expr="//div[@t-field='o.partner_shipping_id']/../.." position="before">
            <t t-if="not o and doc">
                <t t-set="o" t-value="doc"/>
            </t>

            <t t-if="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
            <t t-if="not o or not 'company_id' in o">
                <t t-set="company" t-value="res_company"/>
            </t>
            <div class="row">
                <div class="col-xs-3 mb4">
                    <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % to_text(company.logo)" style="max-height: 45px;"/>
                </div>
                <div class="col-xs-9 text-right" style="margin-top:22px;" t-field="company.report_header" name="moto"/>
            </div>
            <div t-if="company.logo or company.report_header" class="row zero_min_height">
                <div class="col-xs-12">
                    <div style="border-bottom: 1px solid black;"/>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-6" name="company_address">
                    <span t-field="company.partner_id"
                        t-field-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}'
                        style="border-bottom: 1px solid black; display:inline-block;"/>
                </div>
            </div>
            <br/>
            <br/>
        </xpath>

        <xpath expr="//div[@name='invoice_address' and @groups='!sale.group_delivery_invoice_address']" position="attributes">
            <attribute name="class">col-xs-4 col-xs-offset-1</attribute>
            <attribute name="style">border: 1px solid black; border-radius: 25px;</attribute>
        </xpath>
        <xpath expr="//div[@groups='sale.group_delivery_invoice_address'][1]" position="attributes">
            <attribute name="class">col-xs-5</attribute>
            <attribute name="t-att-style">o.partner_shipping_id and (o.partner_shipping_id != o.partner_id) and 'border: 1px solid black; border-radius: 25px;' or ''</attribute>
        </xpath>
        <xpath expr="//div[@groups='sale.group_delivery_invoice_address'][2]" position="attributes">
            <attribute name="class">col-xs-4 col-xs-offset-3</attribute>
            <attribute name="style">border: 1px solid black; border-radius: 25px;</attribute>
        </xpath>
        <xpath expr="//div[@groups='sale.group_delivery_invoice_address'][2]/div[@t-field='o.partner_id']" position="attributes">
            <attribute name="t-field">o.partner_id.commercial_partner_id</attribute>
        </xpath>
        <xpath expr="//div[@groups='sale.group_delivery_invoice_address'][2]/div[@t-if='o.partner_id.vat']/span" position="attributes">
            <attribute name="t-esc">o.partner_id.commercial_partner_id.vat</attribute>
        </xpath>
        <xpath expr="//div[@groups='sale.group_delivery_invoice_address'][2]/div[@t-if='o.partner_id.vat']" position="attributes">
            <attribute name="t-if">o.partner_id.commercial_partner_id.vat</attribute>
        </xpath>

        <xpath expr="//table[@name='invoice_line_table']/tbody//td[6]/span" position="replace">
            <span t-esc="', '.join(map(lambda x: x.name, l.invoice_line_tax_ids))"/>
        </xpath>

        <xpath expr="//div[@name='invoice_address']" position="before">
            <div class="col-xs-7" style="border: 1px solid black; border-radius: 25px;">
                <div class="row">
                    <div class="col-xs-7">
                        <span t-field="o.journal_id.name"/>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-3" t-if="o.number">
                        <strong>Invoice:</strong>
                        <p t-field="o.number"/>
                    </div>
                    <div class="col-xs-3" t-if="o.name">
                        <strong>Description:</strong>
                        <p t-field="o.name"/>
                    </div>
                    <div class="col-xs-3" t-if="o.date_invoice">
                        <strong>Invoice Date:</strong>
                        <p t-field="o.date_invoice"/>
                    </div>
                    <div class="col-xs-3" t-if="o.origin">
                        <strong>Source:</strong>
                        <p t-field="o.origin"/>
                    </div>
                    <div class="col-xs-3" t-if="o.partner_id.commercial_partner_id.ref">
                        <strong>Customer Code:</strong>
                        <p t-field="o.partner_id.commercial_partner_id.ref"/>
                    </div>
                    <div name="reference" class="col-xs-3" t-if="o.reference">
                        <strong>Reference:</strong>
                        <p t-field="o.reference"/>
                    </div>
                </div>
            </div>
        </xpath>

        <xpath expr="//div[hasclass('page')]" position="after">
            <t t-foreach="o.image_ids" t-as="image">
                <div class="page" style="page-break-before: always">
                    <img t-att-src="'data:image/png;base64,%s' % to_text(image.image_main)" style="max-height:268mm; max-width: 210mm; height:auto; width:auto;"/>
                </div>
            </t>
        </xpath>

        <xpath expr="//address[@t-field='o.partner_id']" position="attributes">
            <attribute name="t-field">o.partner_id.commercial_partner_id</attribute>
        </xpath>
        <xpath expr="//div[@t-if='o.partner_id.vat']" position="attributes">
            <attribute name="t-if">o.partner_id.commercial_partner_id.vat</attribute>
        </xpath>
        <xpath expr="//span[@t-field='o.partner_id.vat']" position="attributes">
            <attribute name="t-field">o.partner_id.commercial_partner_id.vat</attribute>
        </xpath>
    </template>
</odoo>
