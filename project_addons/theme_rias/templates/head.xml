<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!-- Add custom styles -->
    <template id="rias_website_assets_frontend" inherit_id="website.assets_frontend">
        <xpath expr="link[last()]" position="after">
            <link href="/theme_rias/static/css/_general.less" rel="stylesheet" type="text/less"/>
            <link href="/theme_rias/static/css/header.less" rel="stylesheet" type="text/less"/>
            <link href="/theme_rias/static/css/footer.less" rel="stylesheet" type="text/less"/>
            <link href="/theme_rias/static/css/snippets.less" rel="stylesheet" type="text/less"/>
            <link href="/theme_rias/static/css/page_home.less" rel="stylesheet" type="text/less"/>
            <link href="/theme_rias/static/css/map.less" rel="stylesheet" type="text/less"/>
            <link href="/theme_rias/static/css/page_about_us.less" rel="stylesheet" type="text/less"/>
        </xpath>
    </template>

    <!--Add custom scripts-->
    <template id="rias_website_assets_editor" inherit_id="website.assets_editor">
        <xpath expr="script[last()]" position="after">
            <script type="text/javascript" src="/theme_rias/static/js/main.js" />
        </xpath>
    </template>

</odoo>