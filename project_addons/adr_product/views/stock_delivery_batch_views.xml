<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="stock_move_selection_wzd_adr_form" model="ir.ui.view">
        <field name="name">stock.move.selection.wzd.form</field>
        <field name="model">stock.batch.delivery</field>
        <field name="inherit_id" ref="stock_move_selection_wzd.stock_batch_delivery_form"/>
        <field name="arch" type="xml">
            <button name="action_cancel" position="after">
                <button name="print_rda_delivery" string="Print RDA" type="object" class="oe_highlight"/>
            </button>
            <xpath expr="//notebook[@colspan='4']" position="inside">
                <page string="Delivery order">
                    <field name="picking_ids">
                        <tree string="Pickings" default_order='sequence'>
                            <field name="sequence" widget="handle"/>
                            <field name="name"/>
                            <field name="partner_id"/>
                            <field name="origin"/>
                            <field name="backorder_id"/>
                            <field name="scheduled_date"/>
                            <field name="state"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
